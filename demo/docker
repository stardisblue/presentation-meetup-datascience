

docker pull cassandra:latest
docker run --rm --network cassandra -v "$(pwd)/init.cql:/scripts/data.cql" -e CQLSH_HOST=cassandra -e CQLSH_PORT=9042 -e CQLVERSION=3.4.6 nuvo/docker-cqlsh
docker network create cassandra

docker run --rm -d --name cassandra --hostname cassandra --network cassandra cassandra